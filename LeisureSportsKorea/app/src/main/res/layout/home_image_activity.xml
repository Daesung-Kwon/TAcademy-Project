<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_linear"
    android:layout_width="@dimen/home_activity_imageWidth"
    android:layout_height="@dimen/home_activity_imageHeight">

    <ImageView
        android:id="@+id/activity_backimgae"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/activity_backimgae"/>

    <LinearLayout
        android:id="@+id/activity_dim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_icon"
            android:layout_width="@dimen/home_activity_iconWidth"
            android:layout_height="@dimen/home_activity_iconHeight"
            android:layout_marginTop="@dimen/home_activity_iconMarginTop" />

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_activity_text1MarginTop"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/home_activity_text1Size" />

        <TextView
            android:id="@+id/activity_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_activity_text2MarginTop"
            android:textColor="#ffffff"
            android:textSize="@dimen/home_activity_text2Size" />

        <TextView
            android:id="@+id/activity_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_activity_text3MarginTop"
            android:textColor="#ffffff"
            android:textSize="@dimen/home_activity_text3Size" />

        <TextView
            android:id="@+id/activity_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_activity_text3MarginTop"
            android:textColor="#ffffff"
            android:textSize="@dimen/home_activity_text3Size" />

        <TextView
            android:id="@+id/activity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_activity_priceMarginTop"
            android:textColor="#ffffff"
            android:textSize="@dimen/home_activity_priceSize" />

    </LinearLayout>
</FrameLayout>
