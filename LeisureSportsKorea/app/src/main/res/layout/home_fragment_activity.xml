<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/home_activity_totalPaddinLeft"
    >

    <TextView
        android:id="@+id/home_activity_groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_activity_groupNameSize"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_marginTop="@dimen/home_activity_groupNameMarginTop"
        android:layout_marginBottom="@dimen/home_activity_groupNameMarginBottom"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_activity_imageHeight"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <include
                android:id="@+id/home_activity_image1"
                layout="@layout/home_image_activity"
                android:layout_width="@dimen/home_activity_imageWidth"
                android:layout_height="@dimen/home_activity_imageHeight"
                android:layout_marginRight="@dimen/home_activity_imageMarginRight"/>

            <include
                android:id="@+id/home_activity_image2"
                layout="@layout/home_image_activity"
                android:layout_width="@dimen/home_activity_imageWidth"
                android:layout_height="@dimen/home_activity_imageHeight"
                android:layout_marginRight="@dimen/home_activity_imageMarginRight"/>

            <include
                android:id="@+id/home_activity_image3"
                layout="@layout/home_image_activity"
                android:layout_width="@dimen/home_activity_imageWidth"
                android:layout_height="@dimen/home_activity_imageHeight"
                android:layout_marginRight="@dimen/home_activity_imageMarginRight"/>

            <include
                android:id="@+id/home_activity_image4"
                layout="@layout/home_image_activity"
                android:layout_width="@dimen/home_activity_imageWidth"
                android:layout_height="@dimen/home_activity_imageHeight"
                android:layout_marginRight="@dimen/home_activity_imageMarginRight"
                />

            <include
                android:id="@+id/home_activity_image5"
                layout="@layout/home_image_activity"
                android:layout_width="@dimen/home_activity_imageWidth"
                android:layout_height="@dimen/home_activity_imageHeight"
                android:layout_marginRight="@dimen/home_activity_imageMarginRight"/>

        </LinearLayout>
    </HorizontalScrollView>



</LinearLayout>