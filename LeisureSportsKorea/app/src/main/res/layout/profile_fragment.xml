<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/profile_myprofile"
            layout="@layout/profile_myprofile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPartition"></LinearLayout>


                <!--          Group My Page                              -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginTop="21dp"
                        android:text="My Page"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/list_groupNameSize" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/profile_reservationlayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_height"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/list_iconWidth"
                        android:layout_height="@dimen/list_iconHeight"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginRight="@dimen/profile_marginRight"
                        android:src="@drawable/ic_list" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reservation list"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textSize="@dimen/list_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_cartlayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_height"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/list_iconWidth"
                        android:layout_height="@dimen/list_iconHeight"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginRight="@dimen/profile_marginRight"
                        android:src="@drawable/ic_cart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cart"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textSize="@dimen/list_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_favoriteslayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_height"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/list_iconWidth"
                        android:layout_height="@dimen/list_iconHeight"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginRight="@dimen/profile_marginRight"
                        android:src="@drawable/ic_favor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Favorites"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textSize="@dimen/list_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPartition"></LinearLayout>


                <!--          Group Setting                              -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginTop="21dp"
                        android:text="Setting"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/list_groupNameSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_alarmlayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_height"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/list_iconWidth"
                        android:layout_height="@dimen/list_iconHeight"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginRight="@dimen/profile_marginRight"
                        android:src="@drawable/ic_alarm" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setting for push alarm"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textSize="@dimen/list_textSize" />

                    <Switch
                        android:id="@+id/profile_push"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginRight="16dp"></Switch>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_logoutlayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_height"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/list_iconWidth"
                        android:layout_height="@dimen/list_iconHeight"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginRight="@dimen/profile_marginRight"
                        android:src="@drawable/ic_logout" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Log Out"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textSize="@dimen/list_textSize" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPartition"></LinearLayout>

                <!--          Group Customer Service Canter                              -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginTop="21dp"
                        android:text="Customer Service Canter"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textSize="@dimen/list_groupNameSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_aboutuslayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_height"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/list_iconWidth"
                        android:layout_height="@dimen/list_iconHeight"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginRight="@dimen/profile_marginRight"
                        android:src="@drawable/ic_about" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Us"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textSize="@dimen/list_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_termslayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_height"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/list_iconWidth"
                        android:layout_height="@dimen/list_iconHeight"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginRight="@dimen/profile_marginRight"
                        android:src="@drawable/ic_terms" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Terms and Policies"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textSize="@dimen/list_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_customerlayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_height"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/list_iconWidth"
                        android:layout_height="@dimen/list_iconHeight"
                        android:layout_marginLeft="@dimen/profile_marginLeft"
                        android:layout_marginRight="@dimen/profile_marginRight"
                        android:src="@drawable/ic_custom" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer Support"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textSize="@dimen/list_textSize" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
