    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/focus_color"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/map_shop_main_image"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/likes_on_map_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/map_shop_main_image"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/map_shop_main_image"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/btn_heart_unpress" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/map_shop_name_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="업체명"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/card_view_location_on_map"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/ic_map"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/map_shop_location_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3.9"
                        android:textSize="12sp"
                        android:gravity="left"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/card_view_location_on_map"
                        android:layout_toEndOf="@+id/card_view_location_on_map"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/card_view_favorite_on_map"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_alignLeft="@+id/map_shop_rating_text"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ico_star" />

                    <TextView
                        android:id="@+id/map_shop_rating_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="right"
                        android:text="3.9"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

