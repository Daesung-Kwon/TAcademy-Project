<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/focus_color"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/map_shop_main_image"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/likes_on_map_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/map_shop_main_image"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/map_shop_main_image"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/btn_heart_unpress" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/map_shop_name_text1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Hangang Seve Watersports Comp"
                android:maxLines="2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/location_image_location_on_map"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/ic_map"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/map_shop_location_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Han river"
                    android:textSize="12sp"
                    android:layout_gravity="bottom"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sub2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/card_view_favorite_on_map"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ico_star"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/map_shop_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|bottom"
                    android:text="3.9"
                    android:paddingLeft="3dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>