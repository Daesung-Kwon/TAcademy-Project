<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/result_count_tex_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="12 Results"/>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/selected_filter_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#WATER SKI"
                android:textSize="16sp"
                android:padding="3dp"
                android:layout_marginRight="3dp"/>
            <TextView
                android:id="@+id/selected_filter_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Bungee Jump"
                android:textSize="16sp"
                android:padding="3dp"
                android:layout_marginRight="3dp"/>
            <TextView
                android:id="@+id/selected_filter_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Scuba diving"
                android:textSize="16sp"
                android:padding="3dp"
                android:layout_marginRight="3dp"/>
            <TextView
                android:id="@+id/selected_filter_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="3dp" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
