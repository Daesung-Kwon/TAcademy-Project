<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:paddingTop="17dp">

        <TextView
            android:id="@+id/result_count_tex_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="-20dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:text="12 Results"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/selected_filter_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#WATER SKI"
                android:textSize="16sp"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/selected_filter_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="#BUNGEE JUMP"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/selected_filter_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
