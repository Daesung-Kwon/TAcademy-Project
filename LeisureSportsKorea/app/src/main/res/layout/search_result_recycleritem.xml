<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#ffffff"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_recycler_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="#WATER SKI"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorWhite"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/result_recycler_favoricon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:background="@drawable/btn_heart_unpress"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/result_recycler_shareicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/result_recycler_favoricon"
            android:layout_toLeftOf="@+id/result_recycler_favoricon"
            android:layout_toStartOf="@+id/result_recycler_favoricon"
            android:background="@drawable/btn_share_unpress"
            android:elevation="10dp"/>

        <LinearLayout
            android:id="@+id/result_recycler_mainimage"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:elevation="10dp"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/margin_left_right"
                android:paddingRight="@dimen/margin_left_right"
                android:paddingTop="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/result_recycler_circleimage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    tools:ignore="RtlHardcoded"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1.5dp"
                        android:orientation="vertical"
                        android:paddingTop="4dp">

                        <TextView
                            android:id="@+id/result_recycler_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1.5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/result_recycler_mapicon"
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="26dp"
                            android:background="@drawable/ic_map" />

                        <TextView
                            android:id="@+id/result_recycler_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorCartBackGray"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/result_recycler_favo_icon"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/ic_star"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/result_recycler_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginLeft="8dp"
                            android:text="4.8"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/result_recycler_price"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:text="$33"
                            android:textColor="@color/colorWhite"
                            android:letterSpacing="0.1"
                            android:textSize="33sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/result_recycler_dim"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="#000000"
                android:orientation="horizontal" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>