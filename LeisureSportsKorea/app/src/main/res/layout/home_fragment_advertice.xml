<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ViewFlipper
        android:id="@+id/home_viewflipper_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_image1_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/home_image2_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/home_image3_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/home_image4_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </ViewFlipper>

    <com.leisurekr.leisuresportskorea.home.CircleAnimIndicator
        android:id="@+id/home_advertice_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_viewflipper_ad"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp">

    </com.leisurekr.leisuresportskorea.home.CircleAnimIndicator>


    <RelativeLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">
    <Button
        android:id="@+id/home_prevbtn_ad"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_arrow_left"
        android:layout_marginLeft="16dp"
        />

        <LinearLayout
            android:id="@+id/home_prevbtn_dim"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
    <Button
        android:id="@+id/home_nextbtn_ad"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_arrow_right"
        android:layout_marginRight="16dp"/>


        <LinearLayout
            android:id="@+id/home_nextbtn_dim"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>
</RelativeLayout>