<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reservation_recycler_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    >


    <!--                 Left Side              -->
    <RelativeLayout
        android:id="@+id/reservation_recycler_leftbackimage"
        android:layout_width="0dp"
        android:layout_height="@dimen/profile_reservation_height"
        android:layout_weight="6"
        android:background="@drawable/list_image"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reservation_recycler_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/reservation_recycler_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservation_recycler_text1"
                android:text="test"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/reservation_recycler_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservation_recycler_text2"
                android:text="test"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/reservation_recycler_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="test"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </RelativeLayout>

    <!--                 Right Side              -->
    <LinearLayout
        android:id="@+id/reservation_recycler_rightbackimage"
        android:layout_width="0dp"
        android:layout_height="@dimen/profile_reservation_height"
        android:layout_weight="4"
        android:background="@drawable/approved"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/reservation_recycler_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="test" />

<!--                 Date              -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/reservation_recycler_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_reservation_marginBottom"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textSize="16dp" />

        </LinearLayout>

<!--             People             -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="People"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/reservation_recycler_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_reservation_marginBottom"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textSize="16dp" />
        </LinearLayout>

<!--        Location                 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/reservation_recycler_location1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/reservation_recycler_location2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>