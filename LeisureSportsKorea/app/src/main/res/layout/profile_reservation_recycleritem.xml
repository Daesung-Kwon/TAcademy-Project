<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reservation_recycler_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    >


    <!--                 Left Side              -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/profile_reservation_leftImageHeight"
        android:layout_weight="6"
        >

        <LinearLayout
            android:id="@+id/reservation_recycler_leftbackimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <!--<ImageView
            android:id="@+id/reservation_recycler_leftbackimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />-->


        <LinearLayout
            android:id="@+id/reservation_recycler_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/reservationlistimage"
            android:elevation="9dp" />

        <LinearLayout
            android:id="@+id/reservation_recycler_dim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reservation_recycler_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#ffffff"
                android:textSize="@dimen/profile_reservation_leftTextSize" />

            <TextView
                android:id="@+id/reservation_recycler_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservation_recycler_text1"
                android:text="test"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#ffffff"
                android:textSize="@dimen/profile_reservation_leftTextSize" />

            <TextView
                android:id="@+id/reservation_recycler_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservation_recycler_text2"
                android:text="test"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#ffffff"
                android:textSize="@dimen/profile_reservation_leftTextSize" />

            <TextView
                android:id="@+id/reservation_recycler_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="test"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff"
                android:textSize="@dimen/profile_reservation_leftPriceSize"/>
        </RelativeLayout>
    </RelativeLayout>

    <!--                 Right Side              -->
    <LinearLayout
        android:id="@+id/reservation_recycler_rightbackimage"
        android:layout_width="0dp"
        android:layout_height="@dimen/profile_reservation_rightImageHeight"
        android:layout_weight="4"
        android:background="@drawable/approved"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/reservation_recycler_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="test"
            android:textSize="@dimen/profile_reservation_rightTextSize"/>

        <!--                 Date              -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--android:layout_weight="0.5"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/profile_reservation_rightTextSize" />

            <TextView
                android:id="@+id/reservation_recycler_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_reservation_rightText1MarginBottom"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/profile_reservation_rightText1Size" />

        </LinearLayout>

        <!--             People             -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="People"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/profile_reservation_rightTextSize" />

            <TextView
                android:id="@+id/reservation_recycler_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_reservation_rightText1MarginBottom"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/profile_reservation_rightText1Size" />
        </LinearLayout>

        <!--        Location                 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/profile_reservation_rightTextSize" />

            <TextView
                android:id="@+id/reservation_recycler_location1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/profile_reservation_rightText1Size" />

            <TextView
                android:id="@+id/reservation_recycler_location2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/profile_reservation_rightText1Size" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>