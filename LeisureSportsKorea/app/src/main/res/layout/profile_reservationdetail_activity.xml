<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.leisurekr.leisuresportskorea.profile.ReservationDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_reservationdetail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/reservation_detail_rootlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp">

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.leisurekr.leisuresportskorea.profile.ReservationDetailActivity">

            <RelativeLayout
                android:id="@+id/reservation_detail_backimage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">

                <LinearLayout
                    android:id="@+id/reservation_detail_dim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:id="@+id/reservation_detail_topimage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reservation_detail_topImageHeight"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/reservation_detail_topImageMarginBottom"
                    android:layout_marginLeft="@dimen/reservation_detail_totalMarginLeft"
                    android:layout_marginRight="@dimen/reservation_detail_totalMarginRight"
                    android:background="@drawable/list_text"
                    android:paddingLeft="@dimen/reservation_detail_topImagePaddinLeft"
                    android:paddingTop="@dimen/reservation_detail_topImagePaddinTop">

                    <ImageView
                        android:id="@+id/reservation_detail_activityimage"
                        android:layout_width="@dimen/reservation_detail_iconWidth"
                        android:layout_height="@dimen/reservation_detail_iconHeight"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/reservation_detail_iconMarginRight"
                        android:src="@drawable/ic_terms" />

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/reservation_detail_activityimage"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reservation_detail_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/reservation_detail_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/reservation_detail_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="16sp" />
                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reservation_detail_datetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/reservation_detail_bottomTextSize"/>

                        <TextView
                            android:id="@+id/reservation_detail_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="@dimen/reservation_detail_bottomText1Size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reservation_detail_timetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/reservation_detail_bottomTextSize"/>

                        <TextView
                            android:id="@+id/reservation_detail_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="@dimen/reservation_detail_bottomText1Size" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reservation_detail_pricetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/reservation_detail_bottomTextSize"/>

                        <TextView
                            android:id="@+id/reservation_detail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="@dimen/reservation_detail_bottomText1Size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reservation_detail_peopletext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="People"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/reservation_detail_bottomTextSize"/>

                        <TextView
                            android:id="@+id/reservation_detail_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="@dimen/reservation_detail_bottomText1Size" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reservation_detail_locationtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loccation"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/reservation_detail_bottomTextSize"/>

                        <TextView
                            android:id="@+id/reservation_detail_location1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="@dimen/reservation_detail_bottomText1Size" />

                        <TextView
                            android:id="@+id/reservation_detail_location2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="@dimen/reservation_detail_bottomText1Size" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/reservation_detail_cancelbtnlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reservation_detail_finishedbtnlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/reservation_detail_reviewbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorRed"
                        android:text="Review"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reservation_detail_approvedbtnlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <Button
                        android:id="@+id/reservation_detail_cancelbtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorRed"
                        android:text="Cancel"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:id="@+id/reservation_detail_detailbtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/buttonRed"
                        android:text="Detail"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>