<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f01f1b</item>
        <item name="colorPrimaryDark">#d32f2f</item>
        <item name="colorAccent">#f01f1b</item>
    </style>

    <style name="ReviewListTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f01f1b</item>
        <item name="colorPrimaryDark">#d32f2f</item>
        <item name="colorAccent">#f01f1b</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomRatingbarBig" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/big_ratingbar_selector</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
